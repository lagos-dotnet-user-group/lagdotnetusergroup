@model int

@{
    var statusCode = Model;
    var statusmessage = "";
    switch (statusCode)
    {
        case 400:
            statusmessage = "Bad request: The request cannot be fulfilled due to bad syntax";
            break;
        case 403:
            statusmessage = "Forbidden";
            break;
        case 404:
            statusmessage = "Sorry, the page could not be found!";
            break;
        case 408:
            statusmessage = "The server timed out waiting for the request";
            break;
        default:
            statusmessage = "Thatâ€™s odd... Something we didn't expect happened";
            break;
            //throw new HttpResponseMessage(HttpStatusCode.NotModified);
    }
}

<!-- start about Section -->
<section class="error-page-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs12 ">
				<div class="title_sec">
					<h1>Error @statusCode</h1>
                    <h2>@statusmessage</h2>
				</div>			
			</div>		
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs12 ">
				<div class="abt">
                    <p>The page you are looking for is not available or might have been removed. Please try search or</p><a asp-controller="home" asp-action="index" class="btn btn-primary">go to home page</a>
				</div>
			</div>			
		</div>
	</div>
</section>
<!-- End About Section -->